{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "argv-split": ["./src/types/argv-split"]
    }
  },
  "exclude": [
    "node_modules",
    "src/types/**",
    "src/web/**/*"
  ]
}
